<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="300px"
    android:layout_margin="10px"
    android:id="@+id/topnews_cardview">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20px">

        <ImageView
            android:layout_width="230px"
            android:layout_height="230px"
            android:id="@+id/topnew_img"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize_50"
            android:id="@+id/topnew_title"
            android:maxLines="2"
            android:layout_toRightOf="@id/topnew_img"
            android:layout_marginLeft="20px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize_50"
            android:id="@+id/topnew_name"
            android:layout_below="@+id/topnew_title"
            android:layout_toRightOf="@id/topnew_img"
            android:layout_marginLeft="20px"
            android:layout_marginTop="20px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/topnew_sorce"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:textSize="@dimen/textsize_40"
            android:layout_marginBottom="@dimen/textsize_20"
            android:layout_marginRight="@dimen/textsize_20"/>

    </com.zhy.autolayout.AutoRelativeLayout>

</android.support.v7.widget.CardView>